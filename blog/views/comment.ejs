<br>
<% post.comments.forEach(function(comment, index){ %>
<div style="padding-left:4em">
<p><img src="<%= comment.head %>" class="l_head" alt=""><a href="<%= comment.website %>"><%= comment.name %></a>
<span class="info">回复于 <%= comment.time %></span> </p>
<p><%- comment.content %></p>
</div>
<% }) %>
<form method="post">
	<% if(user) { %>
		name : <input type="text" name="name" value="<%= user.name %>"><br>
		email : <input type="text " name="email" value="<%= user.email %>"><br>
		website : <input type="text" name="website" value="/u/<%= user.name %>"><br>
	<% } else { %>
		name : <input type="text" name="name" ><br>
		email : <input type="text " name="email" ><br>
		website : <input type="text" name="website" value="http://"><br>
	<% } %>
	<textarea name="content" id="" cols="80" rows="5"></textarea><br>
	<input type="submit" value="comment">
</form>